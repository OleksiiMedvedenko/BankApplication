                            <!--</Border>
                            </Grid>-->
                        </Grid>
                    </Grid>
                </Grid>

                <Grid Grid.ColumnSpan="3"
                      Grid.Row="2">

                    <Border Opacity="0.2"
                            Panel.ZIndex="0"
                            CornerRadius="0 0 5 30">

                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0.1" 
                                                 EndPoint="1,2.3">
                                <GradientStop Color="#2a3652" 
                                                              Offset="0.2"/>
                                <GradientStop Color="#2d124a"
                                                              Offset="0.35"/>
                                <GradientStop Color="#2a3652" 
                                                              Offset="0.95"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                materialDesign:ShadowAssist.ShadowDepth="Depth3"
                                Style="{DynamicResource MaterialDesignFlatButton}"
                                materialDesign:ButtonAssist.CornerRadius="14"
                                HorizontalAlignment="Center"
                                Height="30"
                                Width="150"
                                Margin="0 0 0 0"
                                Command="{Binding ChangePinCodeCardButtonClickCommand}">
                            <Button.ToolTip>
                                <TextBlock Text="Change PIN Code"/>
                            </Button.ToolTip>
                            <TextBlock Text="PIN Code"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap"
                                       FontSize="15.5"
                                       FontWeight="SemiBold"
                                       Foreground="#0bdead"
                                       FontFamily="Fonts/#Dosis">
                            </TextBlock>
                        </Button>

                        <Button Grid.Column="1"
                                materialDesign:ShadowAssist.ShadowDepth="Depth3"
                                Style="{DynamicResource MaterialDesignFlatButton}"
                                materialDesign:ButtonAssist.CornerRadius="14"
                                HorizontalAlignment="Center"
                                Height="30"
                                Width="150"
                                Margin="0 0 0 0"
                                Command="{Binding BlockCardButtonClickCommand}">
                            <TextBlock Text="Block Card"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap"
                                       FontSize="15.5"
                                       FontWeight="SemiBold"
                                       Foreground="#0bdead"
                                       FontFamily="Fonts/#Dosis">
                            </TextBlock>
                        </Button>

                        <Button Grid.Column="2"
                                materialDesign:ShadowAssist.ShadowDepth="Depth3"
                                Style="{DynamicResource MaterialDesignFlatButton}"
                                materialDesign:ButtonAssist.CornerRadius="14"
                                HorizontalAlignment="Center"
                                Height="30"
                                Width="150"
                                Command="{Binding ChangeCardLimitButtonClickCommand}"
                                Margin="0 0 0 0">
                            <Button.ToolTip>
                                <TextBlock Text="Change Card Limit"/>
                            </Button.ToolTip>
                            <TextBlock Text="Card Limit"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap"
                                       FontSize="15.5"
                                       FontWeight="SemiBold"
                                       Foreground="#0bdead"
                                       FontFamily="Fonts/#Dosis">
                            </TextBlock>
                        </Button>

                        <Button Grid.Column="3"
                                materialDesign:ShadowAssist.ShadowDepth="Depth3"
                                Style="{DynamicResource MaterialDesignFlatButton}"
                                materialDesign:ButtonAssist.CornerRadius="14"
                                HorizontalAlignment="Center"
                                Height="30"
                                Width="150"
                                Margin="0 0 0 0"
                                Command="{Binding GetStatementCardOnUserMailButtonClickCommand}">
                            <Button.ToolTip>
                                <TextBlock Text="Get Statement On My Mail"/>
                            </Button.ToolTip>
                            <TextBlock Text="Statement"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap"
                                       FontSize="15.5"
                                       FontWeight="SemiBold"
                                       FontFamily="Fonts/#Dosis"
                                       Foreground="#0bdead">
                            </TextBlock>
                        </Button>
                    </Grid>
                </Grid>

            </Grid>
        </Border>
    </Grid>

</UserControl>
