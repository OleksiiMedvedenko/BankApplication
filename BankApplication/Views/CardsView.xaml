<UserControl x:Class="BankApplication.Views.CardsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BankApplication.Views"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             prism:ViewModelLocator.AutoWireViewModel="True"
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:editors="http://schemas.syncfusion.com/wpf">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">

        <Border CornerRadius="30 3 6 30"
                materialDesign:ShadowAssist.ShadowDepth="Depth3"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">

            <Border.Background>
                <SolidColorBrush Color="#10101f"
                                 Opacity="0.8"/>
            </Border.Background>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="1.1*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="0.2*"/>
                </Grid.RowDefinitions>


                <Grid Grid.Column="2"
                      Grid.RowSpan="2"
                      Margin="25 25 25 25">

                    <Border Opacity="0.2"
                            Panel.ZIndex="0"
                            CornerRadius="20">

                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0.1" 
                                                 EndPoint="1,2.3">
                                <GradientStop Color="#9314c9" 
                                                              Offset="0.0"/>
                                <GradientStop Color="#2d124a"
                                                              Offset="0.35"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>

                    <Grid>
                        <ListView ItemsSource="{Binding DisplayListOfClientCards}"
                                  SelectionMode="Single"
                                  SelectedItem="{Binding SelectedClientCardFromList, 
                                                        Mode=TwoWay,
                                                        UpdateSourceTrigger=PropertyChanged}"
                                  HorizontalAlignment="Stretch"
                                  HorizontalContentAlignment="Center"
                                  VerticalContentAlignment="Center"
                                  Panel.ZIndex="3">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn>
                                        <HeaderedContentControl>
                                            <Button Style="{StaticResource MaterialDesignFlatButton}"
                                                    materialDesign:ButtonProgressAssist.Value="-1"
                                                    Width="120"
                                                    materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                                                    materialDesign:ButtonProgressAssist.IsIndeterminate="True">
                                                <Button.Content>
                                                    <TextBlock Text="Your Cards: "
                                                               Width="120"
                                                               Foreground="White"
                                                               FontSize="15"
                                                               FontWeight="SemiBold"
                                                               FontFamily="Fonts/#Dosis"/>
                                                </Button.Content>
                                            </Button>
                                        </HeaderedContentControl>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel>
                                                    <TextBox Text="{Binding Path=CardNumber}"
                                                             FontWeight="Medium"
                                                             IsReadOnly="true"
                                                             materialDesign:TextFieldAssist.DecorationVisibility="Hidden" BorderThickness="0">
                                                    </TextBox>
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                </Grid>


                <Grid Grid.Column="0"
                      Grid.ColumnSpan="2"
                      Grid.Row="0"
                      Grid.RowSpan="2"
                      Margin="50 25 25 25">

                    <Border CornerRadius="20"
                            Opacity="0.2"
                            materialDesign:ShadowAssist.ShadowDepth="Depth5"
                            Panel.ZIndex="0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0.1" 
                                                 EndPoint="1,2.3">
                                <GradientStop Color="#9314c9" 
                                                              Offset="0.0"/>
                                <GradientStop Color="#2d124a"
                                                              Offset="0.35"/>
                            </LinearGradientBrush>
                        </Border.Background>

                    </Border>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="0.7*"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.15*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="0.15*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0"
                              Grid.Row="0">

                            <Image Source="Images/Left.png"
                                   Height="35"
                                   Width="35"
                                   Margin="0 0 -20 5"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center"
                                   RenderOptions.BitmapScalingMode="Fant"
                                   Cursor="Hand">

                                <Image.InputBindings>
                                    <MouseBinding MouseAction="LeftClick"
                                                  Command="{Binding SelectPreviosCardMouseClickCommand}"/>
                                </Image.InputBindings>
                                <Image.Style>
                                    <Style TargetType="Image">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver"
                                                     Value="True">
                                                <Setter Property="Opacity" Value="0.6"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Margin" Value="0 0 10 -10"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                                <Image.ToolTip>
                                    <TextBlock Text="Select Previos Card"/>
                                </Image.ToolTip>
                            </Image>
                        </Grid>

                        <Grid Grid.Column="2"
                              Grid.Row="0">

                            <Image Source="Images/Right.png"
                                   Height="35"
                                   Width="35"
                                   Margin="-20 0 0 5"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   RenderOptions.BitmapScalingMode="Fant"
                                   Cursor="Hand">

                                <Image.InputBindings>
                                    <MouseBinding MouseAction="LeftClick"
                                                  Command="{Binding SelectNextCardMouseClickCommand}"/>
                                </Image.InputBindings>
                                <Image.Style>
                                    <Style TargetType="Image">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver"
                                                     Value="True">
                                                <Setter Property="Opacity" Value="0.6"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseCaptured" Value="True">
                                                <Setter Property="Margin" Value="0 0 10 -10"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                                <Image.ToolTip>
                                    <TextBlock Text="Select Next Card"/>
                                </Image.ToolTip>
                            </Image>
                        </Grid>

                        <Grid Grid.Row="0"
                              Grid.Column="1"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center">

                            <materialDesign:Flipper Style="{Binding MaterialDesignCardFlipper}"
                                                    Cursor="Hand">
                                <materialDesign:Flipper.FrontContent>
                                    <Grid Height="226"
                                          Width="230">
                                        <StackPanel Grid.Row="1"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center">

                                            <Image Source="Images/cardForeground.png"
                                                   RenderOptions.BitmapScalingMode="Fant">
                                                <Image.InputBindings>
                                                    <MouseBinding MouseAction="LeftClick"
                                                                  Command="{x:Static materialDesign:Flipper.FlipCommand}"/>
                                                </Image.InputBindings>
                                            </Image>
                                            <TextBlock/>
                                        </StackPanel>
                                    </Grid>
                                </materialDesign:Flipper.FrontContent>
                                <materialDesign:Flipper.BackContent>
                                    <Grid Height="226"
                                          Width="230">
                                        <StackPanel Grid.Row="1"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center">
                                            <Image Source="Images/cardBackground.png"
                                                   RenderOptions.BitmapScalingMode="Fant">

                                                <Image.InputBindings>
                                                    <MouseBinding MouseAction="LeftClick"
                                                                  Command="{x:Static materialDesign:Flipper.FlipCommand}"/>
                                                </Image.InputBindings>
                                            </Image>
                                        </StackPanel>
                                    </Grid>
                                </materialDesign:Flipper.BackContent>
                            </materialDesign:Flipper>
                        </Grid>


                        <Grid Grid.Row="1"
                              Grid.ColumnSpan="3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="0.5*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.50*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="0.50*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Row="0"
                                  VerticalAlignment="Top"
                                  Grid.Column="0"
                                  Grid.ColumnSpan="3"
                                  Margin="20 0 20 0">
                                <ProgressBar Value="{Binding CardLimitInProcent}"
                                             materialDesign:TransitionAssist.DisableTransitions="True"/>
                                <StackPanel HorizontalAlignment="Center"
                                            Orientation="Horizontal">
                                    <TextBlock Text="Card Limit :  "
                                               Foreground="White"
                                               FontWeight="DemiBold"
                                               FontFamily="Fonts/#Poppins"
                                               FontSize="12"
                                               HorizontalAlignment="Center"
                                               Margin="0 24 0 0"/>

                                    <TextBlock Text="{Binding CardCreditLimitTextBlockBinding}"
                                               Foreground="White"
                                               FontWeight="DemiBold"
                                               FontFamily="Fonts/#Dosis"
                                               FontSize="12"
                                               HorizontalAlignment="Center"
                                               Margin="0 24 0 0"/>
                                </StackPanel>
                            </Grid>


                            <Grid Grid.Row="1"
                                  Grid.Column="0"
                                  Grid.ColumnSpan="3">
                                <Grid Margin="15 0 0 10">
                                    <StackPanel Orientation="Horizontal"
                                                VerticalAlignment="Bottom"
                                                Margin="0 -10 0 18">
                                        <TextBlock Text="Balance: "
                                                   FontSize="15"
                                                   Foreground="#fae7a5"
                                                   FontWeight="DemiBold"
                                                   FontFamily="Fonts/#Poppins_Regular"/>

                                        <TextBlock Text="{Binding MoneyOnTheCardTextBlockBinding}"
                                                   FontSize="15"
                                                   Foreground="#fae7a5"
                                                   FontWeight="DemiBold"
                                                   FontFamily="Fonts/#Poppins_Regular"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>


                            <!--<Grid Grid.Column="1"
                                  Margin="65 0 65 10"
                                  Opacity="1">

                                <Border BorderThickness="2"
                                        CornerRadius="80"
                                        Height="76"
                                        Width="85"
                                        Panel.ZIndex="1"
                                        Opacity="1">

                                    <Border.BorderBrush>
                                        <LinearGradientBrush StartPoint="0,0"
                                                                 EndPoint="1,2">
                                            <GradientStop Color="LightYellow" Offset="0.0"/>
