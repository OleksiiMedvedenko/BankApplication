                                                   FontWeight="SemiBold"
                                                   FontSize="23"
                                                   Foreground="White"/>
                                            </StackPanel>
                                        </Grid>

                                        <Border BorderThickness="1.4"
                                                CornerRadius="80"
                                                Height="78"
                                                Margin="0,0,-5,-6"
                                                Opacity="0.5">

                                            <Border.BorderBrush>
                                                <LinearGradientBrush StartPoint="0,0"
                                                                 EndPoint="1,2">
